@model IEnumerable<WebBanHangOnline.Models.EF.Product>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImg = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImg = img.Image;
        }

        // Tính giá hiển thị
        var priceFormatted = item.Price >= 1000000
            ? $"{item.Price / 1000000}$"
            : $"{item.Price / 1000}k";
        var priceSaleFormatted = item.PriceSale >= 1000000
            ? $"{item.PriceSale / 1000000}$"
            : $"{item.PriceSale / 1000}k";

        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImg" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-$20</span></div>
                }
                
                <div class="product_info">
                    <h6 class="product_name"><a href="@item.Alias">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@priceSaleFormatted<span>@priceFormatted</span></div>
                    }
                    else
                    {
                        <div class="product_price">@priceFormatted</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#">add to cart</a></div>
        </div>
    }
}
